#modal.modal.fade

%table#tasks
    %thead
        %tr
            %th Title
            %th Due
            %th Priority
            %th Description
            %th 
    %tbody
        -@tasks.each do |task|
            - if task.team_id == current_team_id
                %tr{:class => task.complete ? 'complete clickable-row' : 'clickable-row', 'data-href' => complete_team_task_path(current_team_id, task)}
                    -#:class => ("complete" if task.complete)
                    %td= task.title
                    %td= task.due.strftime("%b %d, %Y")
                    %td= task.priority
                    %td= task.description
                    %td= link_to 'Edit', edit_team_task_path(current_team_id, task), remote: true, :class => :button
                    %td= link_to 'Delete', team_task_path(current_team_id, task), :class => :button, :method => :delete 

