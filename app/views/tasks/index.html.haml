%h2 All Tasks

%table#tasks
    %thead
    %tr
        %th Complete
        %th Title
        %th Due
        %th Priority
        %th Description
        %th 
    %tbody
    -@tasks.each do |task|
        %tr
        %td= check_box_tag "completed", true, task.complete, data: { remote: true, url: complete_task_path(task), method: :post }
        %td= task.title
        %td= task.due.strftime("%b %d, %Y")
        %td= task.priority
        %td= task.description
        %td= link_to 'Delete', task_path(task), :method => :delete

= link_to 'Add new task', new_task_path